# MYPC-MCP 配置文件
# 将此文件复制为 config.env 并修改

# ==================== 服务器配置 ====================

# 是否启用 MCP 服务器
SERVER_ENABLED=true

# 服务器名称，用于标识此 MCP 服务
SERVER_NAME=MyPC-MCP

# 服务器监听端口 (1-65535)
SERVER_PORT=9999

# 监听地址，0.0.0.0=所有接口(可局域网/公网访问)，127.0.0.1=仅本机
SERVER_HOST=0.0.0.0

# 访问域名或IP，localhost=本机，局域网IP=局域网访问，域名=公网访问(需路由器端口转发)
SERVER_DOMAIN=localhost

# 屏幕截图保存目录，相对路径或绝对路径
SERVER_SCREENSHOTS_DIR=./screenshots

# 本地请求的 Host 头，用于内部访问
SERVER_LOCAL_HOST_HEADER=localhost:9999

# ==================== 安全区配置 ====================

# 安全区列表，允许写入操作的目录（用 | 分隔）
# 工作区(workspace)优先级高于安全区，支持环境变量
SAFE_ZONES=%USERPROFILE%\Documents|%USERPROFILE%\Downloads|%USERPROFILE%\Desktop|%USERPROFILE%\Pictures

# ==================== 路径配置 ====================

# 默认工作区目录，文件操作的基础路径，优先级高于安全区
PATHS_WORKSPACE=%USERPROFILE%\Workspace

# Everything 搜索工具路径（用 | 分隔，按顺序尝试）
PATHS_EVERYTHING=C:\Program Files\Everything\es.exe|C:\Program Files (x86)\Everything\es.exe|es.exe

# Git Bash 路径（用 | 分隔，按顺序尝试）
PATHS_GIT_BASH=C:\Program Files\Git\bin\bash.exe|C:\Program Files (x86)\Git\bin\bash.exe|bash.exe

# 下载目录列表（用 | 分隔）
PATHS_DOWNLOAD_DIRS=%USERPROFILE%\Downloads|D:\DOWNLOAD

# 可用驱动器列表（用 | 分隔）
PATHS_DRIVES=C:|D:|E:|F:

# ==================== 视觉大模型配置 ====================

# 是否启用视觉大模型功能
VLM_ENABLED=false

# 视觉大模型 API 地址
VLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# API 密钥（必填）
VLM_API_KEY=

# 使用的模型名称
VLM_MODEL=glm-4v

# 截图识别的提示词
VLM_PROMPT=请详细描述图片并重点描述文字信息。

# ==================== 屏幕截图配置 ====================

# 最多保留的截图数量，超出后自动删除旧截图
SCREEN_MAX_SCREENSHOTS=20

# 发送给 LLM 的图片最大尺寸（长或宽），单位：像素
SCREEN_LLM_MAX_DIM=800

# 发送给 LLM 的图片质量 (1-100)
SCREEN_LLM_QUALITY=60

# 发送给 VLM 的图片最大尺寸（长或宽），单位：像素
SCREEN_VLM_MAX_DIM=1000

# 发送给 VLM 的图片质量 (1-100)
SCREEN_VLM_QUALITY=60

# VLM API 请求超时时间，单位：秒
SCREEN_VLM_TIMEOUT=60

# ==================== 系统配置 ====================

# CPU 使用率采样间隔时间，单位：秒
SYSTEM_CPU_INTERVAL=0.1

# ==================== 文件操作配置 ====================

# 读取文本文件时的默认最大行数
FILES_DEFAULT_READ_LINES=300

# 文本搜索返回的最大结果数
FILES_GREP_MAX_RESULTS=100

# ==================== 窗口和通知配置 ====================

# 通知默认显示时长，单位：秒
WINDOW_NOTIFICATION_DURATION=60

# 通知中显示的应用名称
WINDOW_NOTIFICATION_APP_NAME=MyPC

# 进程列表返回的最大数量
WINDOW_PROCESS_LIST_LIMIT=20

# 窗口列表返回的最大数量
WINDOW_WINDOW_LIST_LIMIT=50

# 自动点击/输入的最小延迟时间，单位：秒
WINDOW_DELAY_MIN_SECONDS=1

# 自动点击/输入的最大延迟时间，单位：秒
WINDOW_DELAY_MAX_SECONDS=120

# ==================== 搜索配置 ====================

# Everything 搜索默认返回的最大结果数
SEARCH_DEFAULT_LIMIT=20

# ==================== 键盘鼠标控制配置 ====================

# 是否启用防误触功能，将鼠标移到屏幕角落可终止操作
KEYBOARD_MOUSE_FAILSAFE=true

# 键盘/鼠标操作后的默认暂停时间，单位：秒
KEYBOARD_MOUSE_PAUSE=0.1

# 打字时每个字符之间的间隔时间，单位：秒
KEYBOARD_MOUSE_TYPE_INTERVAL=0.02

# ==================== 文件检测配置 ====================

# 文件搜索时的目录递归深度
DETECTOR_SEARCH_DEPTH=3

# 常用目录名称列表（用 | 分隔）
DETECTOR_COMMON_DIRS=Desktop|Downloads|Documents|Pictures|Videos|Music|Projects|Source|Repos|GitHub|Work|Workspace

# ==================== SSH 配置 ====================

# SSH 主机配置（JSON 格式）
# 示例: {"MyServer": {"host": "192.168.1.100", "port": 22, "user": "username", "password": "xxx"}}
SSH_HOSTS={"MyServer": {"host": "192.168.1.100", "port": 22, "user": "your_username", "password": "your_password"}}

# 允许执行的命令列表（用 | 分隔，白名单模式）
SSH_ALLOWED_COMMANDS=docker|docker-compose|git|npm|node|python|pip|ping|curl|wget|ss|ip|nslookup|dig|grep|awk|sed|sort|uniq|wc|tail|head|less|vim|nano|cat|journalctl
